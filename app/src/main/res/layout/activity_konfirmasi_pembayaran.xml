<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F7D9"
    tools:context=".KonfirmasiPembayaranActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_detail_transaksi"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:padding="12dp"
        android:background="#2E7D32"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Kartu Transaksi -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardTransaksi"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        android:backgroundTint="#FFF8E1"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tanggalTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tanggal_transaksi_dummy"
                android:textColor="#444444"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/statusTransaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/status_transaksi_berhasil"
                android:textColor="#2E7D32"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#DDDDDD"
                android:layout_marginVertical="8dp" />

            <TextView
                android:id="@+id/namaBarang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nama_barang_dummy"
                android:textColor="#000"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/order_id_dummy"
                android:textColor="#555555"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/totalPembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/total_pembayaran_dummy"
                android:textStyle="bold"
                android:textColor="#000"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/metodePembayaran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/metode_pembayaran_dummy"
                android:textColor="#555"
                android:textSize="14sp"
                android:layout_marginTop="4dp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Indikator Berhasil -->
    <LinearLayout
        android:id="@+id/successLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/btnSelesai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardTransaksi">

        <ImageView
            android:id="@+id/iconSuccess"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/centang"
            app:tint="#2E7D32" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/label_berhasil_menyimpan"
            android:textColor="#2E7D32"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Tombol Selesai -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSelesai"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/action_selesai"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:backgroundTint="#FFB300"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>