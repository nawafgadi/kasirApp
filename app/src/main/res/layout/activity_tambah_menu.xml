<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F4EEA9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header: Tambah Menu -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tambah Menu"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:padding="8dp" />

        <!-- Tambah Gambar Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:background="#2E7D32"
            android:padding="32dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:backgroundTint="#2E7D32">

            <ImageView
                android:id="@+id/ivFoodImage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@android:drawable/ic_menu_gallery"
                android:scaleType="centerCrop"
                android:background="#2E7D32"
                android:padding="20dp"
                android:contentDescription="Tambah gambar makanan" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Gambar"
                android:textSize="16sp"
                android:textColor="#666666"
                android:layout_marginTop="12dp" />

        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginBottom="24dp" />

        <!-- Name Makanan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Makanan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <EditText
            android:id="@+id/etFoodName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="......"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="20dp"
            android:textColor="#000000"
            android:textColorHint="#999999" />

        <!-- Keterangan -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Keterangan"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="......"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingEnd="16dp"
            android:paddingBottom="16dp"
            android:gravity="top"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="20dp"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#999999" />

        <!-- Harga -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="4dp" />

        <EditText
            android:id="@+id/etPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="......"
            android:textSize="16sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:background="@drawable/edittext_background"
            android:layout_marginBottom="32dp"
            android:inputType="numberDecimal"
            android:textColor="#000000"
            android:textColorHint="#999999" />

        <!-- Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:weightSum="2"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <!-- Edit Button -->
            <Button
                android:id="@+id/btnEdit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Edit"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#666666"
                android:background="@drawable/button_edit_background"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#E0E0E0" />

            <!-- Simpan Button -->
            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Simpan"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:background="@drawable/button_save_background"
                android:layout_marginStart="8dp"
                android:backgroundTint="#000000" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>