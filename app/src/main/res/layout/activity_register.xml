<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4EEA9"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="12dp"
            android:src="@drawable/logo_toko" />

        <!-- Judul -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="E-Cashier"
            android:textColor="#519259"
            android:textSize="26sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Selamat datang,"
            android:textColor="#519259"
            android:textSize="16sp" />

        <!-- Container Hijau -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="#519259"
            android:clipToOutline="true"
            android:elevation="3dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Nama -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFF8D6"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_profile" />

                <EditText
                    android:id="@+id/etNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Nama"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="#888" />
            </LinearLayout>

            <!-- Email -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFF8D6"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_user" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="#888" />
            </LinearLayout>

            <!-- Telepon -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFF8D6"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_phone" />

                <EditText
                    android:id="@+id/etTelepon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="No telepon"
                    android:inputType="phone"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="#888" />
            </LinearLayout>

            <!-- Kata sandi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFF8D6"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_cart" />

                <EditText
                    android:id="@+id/etPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Kata sandi"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="#888" />
            </LinearLayout>

            <!-- Ulangi kata sandi -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="#FFF8D6"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_cart" />

                <EditText
                    android:id="@+id/etConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Ulangi kata sandi"
                    android:inputType="textPassword"
                    android:minHeight="48dp"
                    android:paddingVertical="12dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:textColorHint="#888" />
            </LinearLayout>

            <!-- Checkbox -->
            <CheckBox
                android:id="@+id/cbAgreement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Saya setuju dengan kebijakan aplikasi"
                android:textColor="#FFF8D6" />

            <!-- Tombol daftar -->
            <Button
                android:id="@+id/btnDaftar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:backgroundTint="#064635"
                android:text="Daftar"
                android:textColor="#F4EEA9" />

            <!-- Link login -->
            <TextView
                android:id="@+id/tvLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:text="Sudah punya akun?  Masuk disini"
                android:textColor="#FFF8D6" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
